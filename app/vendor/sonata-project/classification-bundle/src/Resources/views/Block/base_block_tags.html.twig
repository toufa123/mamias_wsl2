{% extends sonata_block.templates.block_base %}

{% block block %}
    <div class="panel panel-default {{ settings.class }}">
        {% if settings.title is not empty %}
            <div class="panel-heading">
                <h4 class="panel-title">
                    {% if settings.icon %}
                        <i class="{{ settings.icon }}" aria-hidden="true"></i>
                    {% endif %}
                    {% if settings.translation_domain %}
                        {{ settings.title|trans({}, settings.translation_domain) }}
                    {% else %}
                        {{ settings.title }}
                    {% endif %}
                </h4>
            </div>
        {% endif %}

        <div class="panel-body">
            {% if tags|length %}
                {% for t in tags %}
                    {% block tag_link %}
                        <span class="label label-default"><i class="fa fa-tag"></i> {{ t.name }}</span>
                    {% endblock %}
                {% endfor %}
            {% else %}
                <p>{{ 'no_tags_found'|trans({}, 'SonataClassificationBundle') }}</p>
            {% endif %}
        </div>
    </div>
{% endblock %}
