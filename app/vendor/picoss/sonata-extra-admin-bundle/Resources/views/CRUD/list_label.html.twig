{% extends admin.getTemplate('base_list_field') %}

{% block field %}
    {% spaceless %}
        {% set styles = ['primary', 'success', 'info', 'warning', 'danger'] %}
        {% set style = field_description.options.style is defined and field_description.options.style in styles ? ' label-' ~ field_description.options.style : ' label-default' %}
        <span class="label{{ style }}">{{ value }}</span>
    {% endspaceless %}
{% endblock %}